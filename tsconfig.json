{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES6",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": [
			"ES2015",
			"ES2020",
			"DOM",
		],
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"packages/*"
			],
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"packages",
	]
}
