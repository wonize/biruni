{
	"compilerOptions": {
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"target": "ES6",
		"module": "ES6",
		"moduleDetection": "auto",
		"moduleResolution": "Bundler",
		"incremental": false,
		"isolatedModules": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"paths": {
			"@/*": [
				"src/*",
				"src/*/mod",
			]
		}
	},
	"exclude": [
		"**/node_modules",
		"**/*.d.ts",
		"**/dist/*",
		"**/.turbo/*",
		"**/tsup.config.ts"
	]
}