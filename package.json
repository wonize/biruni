{
	"name": "@biruni/monorepo",
	"type": "module",
	"version": "0.0.0",
	"private": true,
	"packageManager": "pnpm@9.1.0",
	"scripts": {
		"changeset": "changeset",
		"ci:add": "changeset add",
		"ci:version": "changeset version",
		"ci:status": "changeset status",
		"ci:publish": "nr ci:prepublish && pnpm --recursive publish",
		"ci:prepublish": "nr format && nr lint && nr test && nr build && nr ci:add && nr ci:version",
		"build": "tsx scripts/build.ts",
		"build:watch": "tsx watch scripts/build.ts",
		"vitest": "vitest",
		"test": "vitest run",
		"test:watch": "vitest --watch --clearScreen",
		"lint": "nr eslint .",
		"lint:fix": "nr eslint --fix .",
		"eslint": "eslint --config='eslint.config.js' --color --format='stylish'",
		"lint:report:html": "nr eslint --format='html' . --output-file=\"_ignored_/logs/eslint.$(date +'%Y-%m-%d-%H-%M-%S').htm\"",
		"lint:report:stylish": "nr eslint --no-color --format='stylish' . --output-file=\"_ignored_/logs/eslint.$(date +'%Y-%m-%d-%H-%M-%S').log\"",
		"prettier": "prettier",
		"format": "prettier . --check --config='prettier.config.mjs'",
		"format:fix": "prettier . --write --config='prettier.config.mjs'",
		"vitepress": "vitepress",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"devDependencies": {
		"@antfu/ni": "0.21.12",
		"@changesets/cli": "2.27.1",
		"@repo/configs": "workspace:*",
		"@types/node": "20.12.7",
		"biruni": "workspace:*",
		"jsdom": "24.0.0",
		"tasuku": "2.0.1",
		"terser": "5.30.3",
		"tsup": "8.0.2",
		"tsx": "4.7.3",
		"typescript": "5.4.5",
		"vite-tsconfig-paths": "4.3.2",
		"vitepress": "1.1.3",
		"vitest": "1.5.0",
		"vitest-localstorage-mock": "0.1.2",
		"zx": "8.0.2"
	},
	"dependencies": {
		"@ionic/storage": "4.0.0",
		"ajv": "8.12.0",
		"joi": "17.12.3",
		"pullstate": "1.25.0",
		"superstruct": "1.0.4",
		"vest": "5.2.12",
		"yup": "1.4.0",
		"zustand": "4.5.2"
	},
	"engines": {
		"node": ">=18"
	}
}
