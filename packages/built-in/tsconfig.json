{
	"include": [
		"src",
	],
	"exclude": [
		"node_modules",
		"dist",
		".turbo",
		"tsup.config.ts"
	],
	"compilerOptions": {
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": false,
		"isolatedModules": true,
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"target": "ESNext"
	}
}
